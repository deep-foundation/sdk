{
  "compileOnSave": true,
  "include": ["./capacitor.config.ts", "./capacitor.config.js"],
  "files": ["./src/index.ts", "./src/preload.ts", "./src/setup.ts", "./src/rt/electron-rt.ts", "./src/rt/electron-plugins.js"],
  "compilerOptions": {
    "outDir": "./build",
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "rootDir": ".",
    "strict": false,
    "skipLibCheck": true,
    "isolatedModules": true
  }
}
